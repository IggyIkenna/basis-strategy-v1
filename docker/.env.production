# =============================================================================
# DOCKER PRODUCTION ENVIRONMENT
# =============================================================================
# This file is used by docker-compose.yml for production deployment

# Core startup configuration
BASIS_ENVIRONMENT=prod
BASIS_DEPLOYMENT_MODE=docker
BASIS_DEPLOYMENT_MACHINE=gcloud_linux_vm
BASIS_DATA_DIR=/app/data
BASIS_DATA_MODE=db
BASIS_RESULTS_DIR=/app/results
BASIS_REDIS_URL=redis://redis:6379/0
BASIS_DEBUG=false
BASIS_LOG_LEVEL=INFO
BASIS_EXECUTION_MODE=live
BASIS_DATA_START_DATE=2024-01-01
BASIS_DATA_END_DATE=2024-12-31

# Caddy Configuration
APP_DOMAIN=your-domain.com
ACME_EMAIL=your-email@example.com
BASIC_AUTH_HASH=
HTTP_PORT=80
HTTPS_PORT=443
HEALTH_CHECK_INTERVAL=35s
HEALTH_CHECK_ENDPOINT=/health

# API Configuration
BASIS_API_PORT=8001
BASIS_API_HOST=0.0.0.0

# Frontend Configuration
VITE_API_MODE=real
