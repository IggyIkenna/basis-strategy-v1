# Production Environment Configuration
# This file overrides values in env.unified

# Core configuration
BASIS_ENVIRONMENT=prod
BASIS_DEPLOYMENT_MODE=local
BASIS_DEPLOYMENT_MACHINE=local_mac
BASIS_DATA_DIR=./data
BASIS_DATA_MODE=db
BASIS_RESULTS_DIR=./results

BASIS_DEBUG=false
BASIS_LOG_LEVEL=INFO
BASIS_EXECUTION_MODE=live

# Health monitoring
HEALTH_CHECK_INTERVAL=35s
HEALTH_CHECK_ENDPOINT=/health

# API Configuration
BASIS_API_PORT=8001
BASIS_API_HOST=0.0.0.0
BASIS_API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend Configuration
VITE_API_MODE=real

# Data range for backtesting
BASIS_DATA_START_DATE=2024-01-01
BASIS_DATA_END_DATE=2024-12-31
