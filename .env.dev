# Local Development Environment Configuration
# This file overrides values in env.unified

# Core configuration
BASIS_ENVIRONMENT=dev
BASIS_DEPLOYMENT_MODE=local
BASIS_DEPLOYMENT_MACHINE=local_mac
BASIS_DATA_DIR=./data
BASIS_DATA_MODE=csv
BASIS_RESULTS_DIR=./results

BASIS_DEBUG=true
BASIS_LOG_LEVEL=DEBUG
BASIS_EXECUTION_MODE=backtest

# Health monitoring
HEALTH_CHECK_INTERVAL=5s
HEALTH_CHECK_ENDPOINT=/health
BASIS_HOT_RELOAD=true

# API Configuration
BASIS_API_PORT=8001
BASIS_API_HOST=0.0.0.0
BASIS_API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend Configuration
VITE_API_MODE=mock
VITE_USE_MOCK_API=true

# Platform Control
SKIP_QUALITY_GATES=false
SKIP_FRONTEND=false
VITE_SKIP_AUTH=true

# Data range for backtesting
BASIS_DATA_START_DATE=2024-01-01
BASIS_DATA_END_DATE=2024-12-31
BASIS_DEPLOYMENT_MACHINE=local_mac

# Component-Specific Configuration
DATA_LOAD_TIMEOUT=300
DATA_VALIDATION_STRICT=true
DATA_CACHE_SIZE=1000
STRATEGY_MANAGER_TIMEOUT=30
STRATEGY_MANAGER_MAX_RETRIES=3
STRATEGY_FACTORY_TIMEOUT=30
STRATEGY_FACTORY_MAX_RETRIES=3

# Quality Gates
SKIP_QUALITY_GATES=true
